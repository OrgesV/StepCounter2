<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F4263"
    tools:context=".personal">

    <TextView
        android:id="@+id/personal_age_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="@string/location"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_age_text6"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/personal_age_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:text="LEVEL"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginRight="29dp" />

    <TextView
        android:id="@+id/personal_age_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="15"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/personal_age_text4"
        app:layout_constraintTop_toBottomOf="@+id/personal_age_text4"
        android:layout_marginRight="17dp" />

    <TextView
        android:id="@+id/personal_name_text"
        android:layout_width="201dp"
        android:layout_height="32dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:text="@string/sample_name"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/personal_age_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="19dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginRight="32dp" />

    <TextView
        android:id="@+id/personal_age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="83dp"
        android:text="AGE: "
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="19dp" />

    <TextView
        android:id="@+id/personal_age_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:text="WEIGHT:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_age_text"
        android:layout_marginLeft="19dp" />

    <TextView
        android:id="@+id/personal_age_text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="GOAL WEIGHT:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_age_text2"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="66dp"
        android:text="Favorite Routes"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@+id/personal_age_text4"
        app:layout_constraintStart_toEndOf="@+id/button2"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="30dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="108dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="129dp"
        android:text="Back to Hub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="28dp"
        android:text="Level Info"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="28dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="102dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:text="Route History"
        app:layout_constraintBaseline_toBaselineOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>